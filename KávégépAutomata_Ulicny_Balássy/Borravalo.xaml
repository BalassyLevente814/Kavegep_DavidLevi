<Window x:Class="KávégépAutomata_Ulicny_Balássy.Borravalo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KávégépAutomata_Ulicny_Balássy"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Borravalo" Height="200" Width="400">
        

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="47*"/>
        </Grid.ColumnDefinitions>
        <Button Name="husz" Content="20%" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="82" Width="125" Click="husz_Click"/>
        <Button Name="harminc" Content="35%" HorizontalAlignment="Left" Margin="138,10,0,0" VerticalAlignment="Top" Height="82" Width="124" Grid.ColumnSpan="2" Click="harminc_Click"/>
        <Button Name="ötven" Content="50%" HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Height="82" Width="125" Grid.Column="1" Click="ötven_Click"/>
        <TextBox Name="egyedi" HorizontalAlignment="Left" Margin="10,105,0,0" TextWrapping="Wrap" Text="Egyedi összeg" VerticalAlignment="Top" Width="289" Height="35" FontSize="20" Grid.ColumnSpan="2" TextChanged="TextBox_TextChanged"/>
        <Button Name="confirm" Content="Confirm" HorizontalAlignment="Left" Margin="139,108,0,0" VerticalAlignment="Top" Grid.Column="1" Click="confirm_Click"/>

    </Grid>
</Window>
